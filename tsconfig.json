{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "outDir": "dist",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "isolatedModules": true,
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
    },
    "include": [
        "src"
    ]
}
